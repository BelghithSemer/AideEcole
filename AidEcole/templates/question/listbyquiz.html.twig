{% extends 'home/quiz.html.twig' %}

{% block body %}
<div class="col-xl-9 col-lg-9 col-md-12">
    <div class="dashboard__content__wraper">
        <div class="dashboard__section__title">
            <h4>Mon Questions</h4>
            
            <a href="{{ path('app_question_new',{'id':quizId}) }}" class="default__button">
                + Ajouter  Question 
            </a>
        </div>

        <div class="row">
            <div class="col-xl-12 aos-init aos-animate" data-aos="fade-up">
                <ul class="nav about__button__wrap" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="single__tab__link active" type="button" aria-selected="true" role="tab" tabindex="-1">List</button>
                    </li>
                </ul>
            </div>

            <!-- Directly display the table content -->
            <div class="tab-content tab__content__wrapper aos-init aos-animate" id="myTabContent" data-aos="fade-up">
                <div class="tab-pane fade show active" id="projects__two" role="tabpanel" aria-labelledby="projects__two">

                    <div class="row">
                        <div class="col-xl-12">
                            <div class="dashboard__table table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for question in questions %}

                                        <tr>
                                            <th>{{ question.title}}</th>
                                            <td>
                                            </td>
                                            
                                            <td>
                                                <div class="dashboard__button__group">
                                                    <a class="dashboard__small__btn__2" href={{ path('app_question_edit', {'id': question.id}) }}>
                    
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg> Edit</a>
                                                    <a class="dashboard__small__btn__2 dashboard__small__btn__3" ">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>    {{ include('question/_delete_form.html.twig') }}
                    </a>
                                                       
                                                </div>


                                            </td>
                                        </tr>
                                        {%else%}
                                        <tr>
                                            <td colspan="3">No question found</td>  
                                        </tr>

                             
{% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Donation index{% endblock %}

{% block body %}
    <h1>Donation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Date_valid</th>
                <th>Date</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.code }}</td>
                <td>{{ donation.dateValid ? donation.dateValid|date('Y-m-d') : '' }}</td>
                <td>{{ donation.date ? donation.date|date('Y-m-d') : '' }}</td>
                <td>{{ donation.montant }}</td>
                <td>
                    <a href="{{ path('app_donation_show', {'code': donation.code}) }}">show</a>
                    <a href="{{ path('app_donation_edit', {'code': donation.code}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_donation_new') }}">Create new</a>
{% endblock %}

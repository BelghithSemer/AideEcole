{% extends 'base.html.twig' %}

{% block title %}Donation{% endblock %}

{% block body %}
    <h1>Donation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ donation.code }}</td>
            </tr>
            <tr>
                <th>Date_valid</th>
                <td>{{ donation.dateValid ? donation.dateValid|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ donation.date ? donation.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ donation.montant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_donation_index') }}">back to list</a>

    <a href="{{ path('app_donation_edit', {'code': donation.code}) }}">edit</a>

    {{ include('donation/_delete_form.html.twig') }}
{% endblock %}

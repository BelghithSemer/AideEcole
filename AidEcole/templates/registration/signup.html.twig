<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>AidEcole - Inscription</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}">
    <!-- CSS here -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/aos.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/magnific-popup.css') }}">
    <link rel="stylesheet" href="{{ asset('css/icofont.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/slick.css') }}">
    <link rel="stylesheet" href="{{ asset('css/swiper-bundle.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}?v={{ random() }}">

    <script>
        if (localStorage.getItem("theme-color") === "dark" || (!("theme-color" in localStorage) && window.matchMedia(
                "(prefers-color-scheme: dark)").matches)) {
            document.documentElement.classList.add("is_dark");
        }
        if (localStorage.getItem("theme-color") === "light") {
            document.documentElement.classList.remove("is_dark");
        }
    </script>
</head>

<body class="body__wrapper" data-aos-easing="ease" data-aos-duration="1000" data-aos-delay="0">
    {% include 'components/navbar.html.twig' %}
    <!-- Dark/Light area start -->
    <div class="mode_switcher my_switcher">
        <button id="light--to-dark-button" class="light align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="ionicon dark__mode" viewBox="0 0 512 512">
                <path
                    d="M160 136c0-30.62 4.51-61.61 16-88C99.57 81.27 48 159.32 48 248c0 119.29 96.71 216 216 216 88.68 0 166.73-51.57 200-128-26.39 11.49-57.38 16-88 16-119.29 0-216-96.71-216-216z"
                    fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32">
                </path>
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" class="ionicon light__mode" viewBox="0 0 512 512">
                <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="32"
                    d="M256 48v48M256 416v48M403.08 108.92l-33.94 33.94M142.86 369.14l-33.94 33.94M464 256h-48M96 256H48M403.08 403.08l-33.94-33.94M142.86 142.86l-33.94-33.94">
                </path>
                <circle cx="256" cy="256" r="80" fill="none" stroke="currentColor" stroke-linecap="round"
                    stroke-miterlimit="10" stroke-width="32"></circle>
            </svg>
            <span class="light__mode">Light</span>
            <span class="dark__mode">Dark</span>
        </button>
    </div>

    <main class="main_wrapper overflow-hidden">
        {% block body %}
        <!-- Sign Up Section -->
        <div class="loginarea sp_top_100 sp_bottom_100">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 offset-md-2">
                        <div class="loginarea__wraper">
                            <div class="login__heading">
                                <h5 class="login__title">Inscription</h5>
                                <p class="login__description">Vous avez déjà un compte ? <a
                                        href="{{ path('app_login') }}">Connectez-vous</a></p>
                            </div>

                            {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}})
                            }}
                            <div class="row">
                               <div class="col-xl-6">
                                    <div class="login__form">
                                        {{ form_label(registrationForm.nom, 'Nom :') }}
                                        {{ form_widget(registrationForm.nom, {'attr': {'class': 'common__login__input', 'placeholder': 'Votre nom'}})
                                        }}
                                        <div class="form-error">
                                            {{ form_errors(registrationForm.nom) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="login__form">
                                        {{ form_label(registrationForm.prenom, 'Prénom :') }}
                                        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'common__login__input', 'placeholder': 'Votre prénom'}})
                                        }}
                                        <div class="form-error">
                                            {{ form_errors(registrationForm.prenom) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    <div class="login__form">
                                        {{ form_label(registrationForm.email, 'Adresse e-mail :') }}
                                        {{ form_widget(registrationForm.email, {'attr': {'class': 'common__login__input', 'placeholder': 'Votre e-mail', 'type': 'email'}})
                                        }}
                                        <div class="form-error">
                                            {{ form_errors(registrationForm.email) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="login__form">
                                        {{ form_label(registrationForm.tel, 'Numéro de téléphone :') }}
                                        {{ form_widget(registrationForm.tel, {'attr': {'class': 'common__login__input', 'placeholder': 'Votre numéro de téléphone', 'type': 'tel'}})
                                        }}
                                        <div class="form-error">
                                            {{ form_errors(registrationForm.tel) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    <div class="login__form">
                                        {{ form_label(registrationForm.sexe, 'Sexe :') }}
                                        <div class="form_group">
                                            {{ form_widget(registrationForm.sexe, {'attr': {'class': 'custom-radio'}})
                                            }}
                                        </div>
                                        <div class="form-error">
                                            {{ form_errors(registrationForm.sexe) }}
                                        </div>
                                    </div>
                                </div>


                                <div class="col-xl-6">
                                    <div class="login__form">
                                        {{ form_label(registrationForm.password.first, 'Mot de passe') }}
                                        {{ form_widget(registrationForm.password.first, {'attr': {'class': 'common__login__input', 'placeholder': 'Mot de passe', 'type': 'password'}})
                                        }}
                                        <div class="form-error">
                                            {{ form_errors(registrationForm.password.first) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="login__form">
                                        {{ form_label(registrationForm.password.second, 'Confirmer le mot de passe') }}
                                         <div class="password-container">
                                        {{ form_widget(registrationForm.password.second, {'attr': {'class': 'common__login__input', 'placeholder': 'Confirmer le mot de passe', 'type': 'password'}})
                                        }}
                                         </div>
                                        <div class="form-error">
                                            {{ form_errors(registrationForm.password.second) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% if role == 'responsable_etablissement' %}
                            <div class="col-xl-6">
                                <div class="login__form">
                                    {{ form_label(registrationForm.nom_etabli, 'Nom de l’établissement') }}
                                    {{ form_widget(registrationForm.nom_etabli, {'attr': {'class': 'common__login__input', 'placeholder': 'Votre nom d\'établissement'}})
                                    }}
                                    <div class="form-error">
                                    {{ form_errors(registrationForm.nom_etabli) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="login__form">
                                    {{ form_label(registrationForm.rib, 'RIB bancaire') }}
                                    {{ form_widget(registrationForm.rib, {'attr': {'class': 'common__login__input', 'placeholder': 'Votre RIB'}})
                                    }}
                                     <div class="form-error">
                                    {{ form_errors(registrationForm.rib) }}
                                     </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="login__form">
                                    {{ form_label(registrationForm.doc_verif, 'Document de vérification') }}
                                    <div class="custom-file">
                                        {{ form_widget(registrationForm.doc_verif, {'attr': {'class': 'common__login__input', 'id': 'doc_verif'}})
                                        }}
                                        <label class="custom-file-label" for="doc_verif">Choisir le fichier</label>
                                    </div>
                                        <div class="form-error">
                                    {{ form_errors(registrationForm.doc_verif) }}
                                     </div>
                                </div>
                            </div>
                            {% elseif role == 'parent' %}
                            <div class="col-xl-6">
                                <div class="login__form">
                                    {{ form_label(registrationForm.local, 'Adresse') }}
                                    {{ form_widget(registrationForm.local, {'attr': {'class': 'common__login__input', 'placeholder': 'Votre adresse'}})
                                    }}
                                    <div class="form-error">
                                    {{ form_errors(registrationForm.local) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="login__form">
                                    {{ form_label(registrationForm.code_postal, 'Code postal') }}
                                    {{ form_widget(registrationForm.code_postal, {'attr': {'class': 'common__login__input', 'placeholder': 'Code postal'}})
                                    }}
                                     <div class="form-error">
                                    {{ form_errors(registrationForm.code_postal) }}
                                     </div>
                                </div>
                            </div>
                            {% elseif role == 'centre_formation' %}
                            <div class="col-xl-6">
                                <div class="login__form">
                                    {{ form_label(registrationForm.nom_form, 'Nom du centre de formation') }}
                                    {{ form_widget(registrationForm.nom_form, {'attr': {'class': 'common__login__input', 'placeholder': 'Nom de votre centre de formation'}})
                                    }}
                                 <div class="form-error">
                                    {{ form_errors(registrationForm.nom_form) }}
                                </div>
                            </div>
                            {% endif %}
                            <div class="login">
                                <div class="login__form">
                                    {{ form_label(registrationForm.agreeTerms, "J'accepte les termes et les conditions" ) }}
                                    {{form_widget(registrationForm.agreeTerms, {'attr': {'id': 'accept_pp'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(registrationForm.agreeTerms) }}
                                    </div>
                                </div>
                            </div>

                            <div class="login__button">
                                <button type="submit" class="default__button">S'inscrire</button>
                            </div>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
    </main>

    {% include 'components/footer.html.twig' %}

    <!-- JS here -->
    <script src="{{ asset('js/vendor/modernizr-3.5.0.min.js') }}"></script>
    <script src="{{ asset('js/vendor/jquery-3.6.0.min.js') }}"></script>
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/isotope.pkgd.min.js') }}"></script>
    <script src="{{ asset('js/slick.min.js') }}"></script>
    <script src="{{ asset('js/jquery.meanmenu.min.js') }}"></script>
    <script src="{{ asset('js/ajax-form.js') }}"></script>
    <script src="{{ asset('js/wow.min.js') }}"></script>
    <script src="{{ asset('js/jquery.scrollUp.min.js') }}"></script>
    <script src="{{ asset('js/imagesloaded.pkgd.min.js') }}"></script>
    <script src="{{ asset('js/jquery.magnific-popup.min.js') }}"></script>
    <script src="{{ asset('js/waypoints.min.js') }}"></script>
    <script src="{{ asset('js/jquery.counterup.min.js') }}"></script>
    <script src="{{ asset('js/plugins.js') }}"></script>
    <script src="{{ asset('js/swiper-bundle.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <a id="scrollUp" href="#top" style="position: fixed; z-index: 2147483647; display: none;"><i
            class="icofont-rounded-up"></i></a>
</body>

</html>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const favoriteIcons = document.querySelectorAll('.favorite-icon');
    favoriteIcons.forEach(icon => {
        icon.addEventListener('click', function (event) {
            event.preventDefault();

            // Get the coursId from the data attribute
            const coursId = this.getAttribute('data-cours-id');
            const url = '{{ path('app_toggle_favorite', {'coursId': '__placeholder__'}) }}'.replace('__placeholder__', coursId);

            // Send the AJAX request
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ coursId: coursId })
            })
            .then(response => response.json())
            .then(data => {
                console.log('Response from server:', data);

                if (data.success) {
                    alert(data.message);

                    // Toggle the heart icon's state
                    const heartIcon = this.querySelector('i');
                    if (data.message.includes('removed')) {
                        heartIcon.classList.remove('text-danger'); // Remove "favorited" state
                    } else if (data.message.includes('added')) {
                        heartIcon.classList.add('text-danger'); // Add "favorited" state
                    }
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error during AJAX request:', error);
            });
        });
    });
});
</script

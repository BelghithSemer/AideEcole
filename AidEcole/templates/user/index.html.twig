{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Nom_etabli</th>
                <th>Nom_form</th>
                <th>Img</th>
                <th>Tel</th>
                <th>Sexe</th>
                <th>Local</th>
                <th>Code_postal</th>
                <th>Rib</th>
                <th>Doc_verif</th>
                <th>AgreeTerms</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nomEtabli }}</td>
                <td>{{ user.nomForm }}</td>
                <td>{{ user.img }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.sexe }}</td>
                <td>{{ user.local }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.rib }}</td>
                <td>{{ user.docVerif }}</td>
                <td>{{ user.agreeTerms ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}

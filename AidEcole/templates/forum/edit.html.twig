{% extends 'home/quiz.html.twig' %}  

{% block title %}{% if forum.id %}Modifier Forum{% else %}Créer un Forum{% endif %}{% endblock %}

{% block body %}
<div class="col-xl-9 col-lg-9 col-md-12">  
    <div class="dashboard__content__wraper">  
        <div class="form-container">
            <h2>{% if forum.id %}Modifier Forum{% else %}Créer un Forum{% endif %}</h2>
            
            {{ form_start(form, {'attr': {'class': 'form'}}) }}

            <div class="form-group">
                <label for="date">Date</label>
                {{ form_widget(form.Date, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez la date'}}) }}
            </div>

            <div class="form-group">
                <label for="questions">Questions</label>
                {{ form_widget(form.Questions, {'attr': {'class': 'form-control', 'placeholder': 'Entrez les questions'}}) }}
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                {{ form_widget(form.Description, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Entrez la description'}}) }}
            </div>

            <div class="form-group">
                <label for="images">Images</label>
                {{ form_widget(form.Images, {'attr': {'class': 'form-control-file'}}) }}
            </div>

            <div class="form-group">
                <label for="categorie">Catégorie</label>
                {{ form_widget(form.Categorie, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez une catégorie'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">
                {% if forum.id %}Mettre à jour{% else %}Créer le forum{% endif %}
            </button>

            {{ form_end(form) }}

            <a href="{{ path('app_forum_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

            {% if forum.id %}
                {{ include('forum/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>  
</div>
{% endblock %}
{% extends 'home/quiz.html.twig' %}

{% block body  %}


       <div class="col-xl-9 col-lg-9 col-md-12">
                            <div class="dashboard__content__wraper">
                                <div class="dashboard__section__title">
                                    <h4>Vos réclamations</h4>
                                </div>
                                <div class="row">
                                    <div class="col-xl-22 aos-init aos-animate" data-aos="fade-up">
                                        <ul class="nav  about__button__wrap" id="myTab" role="tablist">
                                            
                                            <li class="nav-item" role="presentation">
                                                <button class="single__tab__link" data-bs-toggle="tab" data-bs-target="#projects__two" type="button" aria-selected="false" role="tab" tabindex="-1"></button>
                                            </li>
                                       
                                            <li class="nav-item" role="presentation">
                                                 <a class="default__button" href="{{ path('app_reclamation_new') }}">Créer une nouvelle reclamation 
                                                </a>
                                            </a> 
                                            </li>
                
                
                                        </ul>
                                    </div>
                                    


                                    <div class="tab-content tab_content_wrapper aos-init aos-animate" id="myTabContent" data-aos="fade-up">
                                        <div class="tab-pane fade show active" id="projects_two" role="tabpanel" aria-labelledby="projects_two">
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="dashboard__table table-responsive">
                                                        <table>
                                                            <thead>
                                                                <tr>
                                                                    <th>Nom</th>
                                                                    <th>Prenom</th>

                                                                    <th>Sujet</th>
                                                                    <th>Description</th>
                                                                    <th>Status</th>
                                                                
                                                                                                                                        

                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                {% for reclamation in reclamations %}
                                                                    <tr>
                                                                        <td>{{ reclamation.Nom }}</td>
                                                                        <td>{{ reclamation.Prenom }}</td>

                                                                        <td>{{ reclamation.Sujet }}</td>
                                                                        <td>{{ reclamation.Description }}</td>

                                                                        <td>{{ reclamation.statut }}</td>

                                                                
                                                                        <td>
                                                                            <div class="dashboard_button_group">
                                                                                
                                                                         <div class="d-flex gap-2">
                                                                            <a class="btn btn-primary d-flex align-items-center gap-2" href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">
                                                                                <i class="icofont-edit"></i> Edit
                                                                            </a>
                                                                            <a class="btn btn-danger d-flex align-items-center gap-2" href="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}">
                                                                                <i class="icofont-trash"></i> Delete
                                                                            </a>
                                                                        </div>
                                                                        </td>
                                                                    </tr>
                                                                {% else %}
                                                                    <tr>
                                                                        <td colspan="3">No reclamation found</td>
                                                                    </tr>
                                                                {% endfor %}                     </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            
                                            </div>
                                        </div>
                
                                       
                
                                    </div>




                                </div>
                            </div>
                        
                        </div>
{% endblock %}
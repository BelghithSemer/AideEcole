{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ cour.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cour.Description }}</td>
            </tr>
            <tr>
                <th>PDF</th>
                <td>{{ cour.PDF }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ cour.Prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cours_index') }}">back to list</a>

    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>

    {{ include('cours/_delete_form.html.twig') }}
    
{% if cours.pdfFileName %}
    <a href="{{ asset('uploads/pdf/' ~ cours.pdfFileName) }}" target="_blank">
        Télécharger le PDF
    </a>
{% endif %}

{% endblock %}

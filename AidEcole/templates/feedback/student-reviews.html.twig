{% extends 'home/quiz.html.twig' %}

{% block body  %}


       <div class="col-xl-9 col-lg-9 col-md-12">
                            <div class="dashboard__content__wraper">
                                <div class="dashboard__section__title">
                                    <h4>Votre avis</h4>
                                </div>
                                <div class="row">
                                    <div class="col-xl-22 aos-init aos-animate" data-aos="fade-up">
                                        <ul class="nav  about__button__wrap" id="myTab" role="tablist">
                                            
                                            <li class="nav-item" role="presentation">
                                                <button class="single__tab__link" data-bs-toggle="tab" data-bs-target="#projects__two" type="button" aria-selected="false" role="tab" tabindex="-1"></button>
                                            </li>
                                       
                                            <li class="nav-item" role="presentation">
                                                 <a class="default__button" href="{{ path('app_feedback_new') }}">Créer nouveau feedback 
                                                </a>
                                            </a> 
                                            </li>
                
                
                                        </ul>
                                    </div>
                                    


                                    <div class="tab-content tab_content_wrapper aos-init aos-animate" id="myTabContent" data-aos="fade-up">
                                        <div class="tab-pane fade show active" id="projects_two" role="tabpanel" aria-labelledby="projects_two">
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="dashboard__table table-responsive">
                                                        <table>
                                                            <thead>
                                                                <tr>
                                                                    <th>Nom</th>
                                                                    <th>Prénom</th>
                                                                    <th>Note</th>
                                                                    <th>Role</th>
                                                       
                                                                    <th>Actions</th>

                                                                                                                                        

                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                {% for feedback in feedbacks %}

                                                                    <tr>
                                                                        <td>{{ feedback.nom }}</td>
                                                                        <td>{{ feedback.prenom}}</td>
                                                                        <td>{{ feedback.note }}</td>
                                                                        {% if feedback.avis1 != null %}
                                                                            <td>Parent</td>
                                                                        {% elseif feedback.avis4 != null %}
                                                                            <td>Donateur</td>
                                                                         {% elseif feedback.avis6 != null %}
                                                                            <td> Centre de formation  </td>
                                                                        {% elseif feedback.avis8 != null %}
                                                                            <td>Responsable de l'etablisement </td>   
                                                                        {% elseif feedback.avis10 != null %}
                                                                            <td>Enseignant </td>
                                                                        {% endif %}
                                                                        <td>
                                                                            <div class="dashboard_button_group">
                                                                                
                                                                         
                                                                            <div class="d-flex gap-3"> <!-- Espacement entre les boutons -->
    <!-- Bouton "Supprimer" -->
    <a class="btn btn-danger d-flex align-items-center gap-2" href="{{ path('app_feedback_delete', {'id': feedback.id}) }}">
        <i class="icofont-trash"></i> Supprimer
    </a>
    <!-- Bouton "Details" -->
    <a class="btn btn-primary d-flex align-items-center gap-2" href="{{ path('app_feedback_show', {'id': feedback.id}) }}">
        <i class="icofont-eye"></i> Détails
    </a>
</div>
                                                                        </td>
                                                                    </tr>
                                                                {% else %}
                                                                    <tr>
                                                                        <td colspan="3">No feedback found</td>
                                                                    </tr>
                                                                {% endfor %}                     </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            
                                            </div>
                                        </div>
                
                                       
                
                                    </div>




                                </div>
                            </div>
                        
                        </div>
{% endblock %}